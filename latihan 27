# kombinasi fungsi dan prosedur
def hitung_rata(nilai1,nilai2,nilai3):
	return (nilai1 + nilai2 + nilai3) /3
def tampilkan_hasil(nilai_akhir):
	print("nilai rata rata kamu adalah:",nilai_akhir)
	if nilai_akhir >= 75:
		print("kamu di nyatakan lulus!")
	else:
			print("kamu dinyatakan tidak lulus!")
# program utama
print("=== program penilain rata rata===")
n1 = float(input("masukkan nilai 1: "))
n2 = float(input("masukkan nilai 2: "))
n3  = float(input("masukkan nilai 3: "))
rata = hitung_rata(n1, n2, n3)
tampilkan_hasil(rata)
